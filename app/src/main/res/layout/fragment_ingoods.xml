<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:orientation="vertical">
    <Button
            android:text="拍照上传"
            android:layout_width="110dp"
            android:layout_height="50dp" android:id="@+id/Button_incamera"
            app:layout_constraintTop_toBottomOf="@+id/Switch_state"
            app:layout_constraintStart_toStartOf="@+id/Switch_state"
            android:layout_marginTop="16dp" android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/text_goodsname"
            android:layout_width="107dp"
            android:layout_height="42dp"
            android:layout_marginStart="288dp"
            android:text="确认上架" android:textSize="20sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="288dp" app:layout_constraintTop_toTopOf="@+id/Text_goodsname"
            android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:id="@+id/In_goodssum"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="72dp"
            android:ems="10" android:inputType="textPersonName"
            android:hint="请输入总数" android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/In_goodsprice" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/In_goodsprice"
            app:layout_constraintTop_toBottomOf="@+id/In_goodsprice"/>
    <Button

            android:id="@+id/Button_submitgoods"
            android:layout_width="147dp"
            android:layout_height="59dp"
            android:layout_marginBottom="40dp" android:text="上架" android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" android:layout_marginEnd="15dp" android:layout_marginRight="15dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:id="@+id/In_code"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp" android:layout_marginTop="28dp"
            android:ems="10" android:inputType="textPersonName"
            android:hint="请输入商品码" android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/Text_code" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp"/>
    <EditText
            android:id="@+id/In_goodssort"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:ems="10" android:inputType="textPersonName" android:hint="请输入种类号"
            android:textSize="16sp" app:layout_constraintEnd_toEndOf="@+id/In_goodsname"
            app:layout_constraintStart_toStartOf="@+id/In_goodsname"
            app:layout_constraintTop_toBottomOf="@+id/In_goodsname" app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:id="@+id/In_goodscount"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:ems="10" android:inputType="textPersonName"
            android:hint="请输入折扣" android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/In_goodsprice" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/In_goodsprice" app:layout_constraintTop_toBottomOf="@+id/In_goodsprice"/>
    <TextView
            android:id="@+id/Text_goodsprice"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:text="价格" android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/Text_codesort" app:layout_constraintStart_toStartOf="@+id/Text_codesort"
            app:layout_constraintTop_toBottomOf="@+id/Text_codesort" app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:id="@+id/In_goodsprice"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:ems="10" android:inputType="textPersonName" android:hint="请输入价格"
            android:textSize="16sp" app:layout_constraintEnd_toEndOf="@+id/In_goodssort"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/In_goodssort"
            app:layout_constraintTop_toBottomOf="@+id/In_goodssort"
    />
    <TextView
            android:id="@+id/Text_goodsname"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp" android:layout_marginTop="16dp"
            android:text="商品名" android:textSize="20sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Text_code" android:layout_marginLeft="24dp"/>
    <TextView
            android:id="@+id/Text_codesort"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:text="种类号" android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/Text_goodsname" app:layout_constraintStart_toStartOf="@+id/Text_goodsname"
            app:layout_constraintTop_toBottomOf="@+id/Text_goodsname" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:id="@+id/Text_code"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp" android:layout_marginTop="28dp"
            android:text="商品码" android:textSize="20sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="24dp"/>
    <TextView
            android:id="@+id/Text_goodscount"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:text="打折" android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/Text_goodsprice" app:layout_constraintStart_toStartOf="@+id/Text_goodsprice"
            app:layout_constraintTop_toBottomOf="@+id/Text_goodsprice" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:id="@+id/Text_goodssum"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_marginTop="72dp"
            android:text="总数" android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/Text_goodsprice" app:layout_constraintStart_toStartOf="@+id/Text_goodsprice"
            app:layout_constraintTop_toBottomOf="@+id/Text_goodsprice" app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:id="@+id/In_goodsname"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp" android:ems="10"
            android:inputType="textPersonName"
            android:hint="请输入商品名"
            android:textSize="16sp" app:layout_constraintEnd_toEndOf="@+id/In_code"
            app:layout_constraintStart_toStartOf="@+id/In_code" app:layout_constraintTop_toBottomOf="@+id/In_code"
            app:layout_constraintHorizontal_bias="1.0"/>
    <Switch
            android:text="Switch"
            android:layout_width="106dp"
            android:checked="true"
            android:layout_height="32dp" android:id="@+id/Switch_state"
            app:layout_constraintTop_toBottomOf="@+id/text_goodsname"
            android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="@+id/text_goodsname"
            android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="相册上传"
            android:layout_width="110dp"
            android:layout_height="50dp" android:id="@+id/Button_inphoto"
            app:layout_constraintTop_toBottomOf="@+id/Switch_state"
            app:layout_constraintStart_toStartOf="@+id/Switch_state"
            android:layout_marginTop="84dp" android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="250dp"
            android:layout_height="177dp"
            android:background="@drawable/kaboo"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/Button_submitgoods" android:layout_marginBottom="60dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>