<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/registbg"
        tools:context=".ui.activity.LoginActivity">

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.19"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.81995136"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline3"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.19"/>
    <Button
            android:text="注册"
            android:onClick="RegistUser"
            android:layout_width="wrap_content"
            android:layout_height="80dp" android:id="@+id/Regist_button"
            android:background="@drawable/round_login_button"
            app:layout_constraintStart_toStartOf="@+id/guideline" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.622" app:layout_constraintTop_toTopOf="@+id/guideline3"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.406"
            tools:ignore="OnClick"/>
    <EditText
            android:hint="请输入您的账号/学号"
            android:textSize="24sp"
            android:padding="5dp"
            android:gravity="center"
            android:background="@drawable/round_message"
            android:ems="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Input_account"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/guideline3"
            app:layout_constraintVertical_bias="0.762"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"/>
    <EditText
            android:hint="请输入您的账号密码"
            android:textSize="24sp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_message"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/Input_password"
            app:layout_constraintStart_toStartOf="@+id/Input_account"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:hint="请确认您的密码"
            android:textSize="24sp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_message"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/Input_passwordreput"
            app:layout_constraintStart_toStartOf="@+id/Input_account"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.098"
    />


</androidx.constraintlayout.widget.ConstraintLayout>